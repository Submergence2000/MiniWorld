<view class="main">
    <view class='top'>
      <view>
        <view class='img'><open-data type="userAvatarUrl"></open-data></view><view class='text'><open-data type="userNickName"></open-data></view>
      </view>
    </view>

    <view class='information-box'>
        <view class='information-manage'>
            <navigator url="/pages/component/information/information">信息管理</navigator>
        </view>
        <view wx:if="{{hasInformation}}" class='information-list'>
            <view>Name: {{information.name}}</view>
            <view>Phone: {{information.phone}}</view>
            <view>StuID: {{information.stuID}}</view>
        </view>
    </view>

    <navigator url="/pages/component/order/order" class='orders-box'>
      <view class='orders-manage'>
        我的公告
      </view>
    </navigator>
    <view class='icon'>
      <navigator url="/pages/component/order/order?type=1" hover-class="none" >
        <image src='/images/uncompleted.png' mode="aspectFit"></image>
        <text>未结束</text>
      </navigator>
      <navigator url="/pages/component/order/order?type=2" hover-class="none" >
        <image src='/images/completed.png' mode="aspectFit"></image>
        <text>已完成</text>
      </navigator>
    </view>
</view>