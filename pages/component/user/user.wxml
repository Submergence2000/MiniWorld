<view class="main">
    <view class='top'>
      <!-- <navigator url="/pages/bindPhone/index" class='img'>
        
      </navigator> -->
      <view>
        <view class='img'><open-data type="userAvatarUrl"></open-data></view><view class='text'><open-data type="userNickName"></open-data></view>
      </view>
    </view>
    <view class="information-box">
        <view class="information-manage">
            <navigator url="/pages/component/information/information">个人信息</navigator>
        </view>
        <view wx:if="{{hasInformation}}" class="information-list">
            <view>Name: {{information.name}}</view>
            <view>Phone: {{information.phone}}</view>
            <view>StuID: {{information.stuID}}</view>
        </view>
    </view>
    <view class="orders-box">
        <view class="orders">我的公告</view>
        <view class="orders-list" wx:for="{{orders}}" wx:key="index">
            <view class="orders-ID">启事编号：{{item.ID}}</view>
            <view class="orders-detail">
                <image src="{{item.thumb}}"></image>
                <view class="">{{item.title}}</view>
                <view class="">{{item.foundtime}}</view>
                <view class="">{{item.address}}</view>
                <text class="orders-status">{{item.status}}</text>
            </view>
        </view>
    </view>
</view>