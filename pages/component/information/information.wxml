<view class="main">
    <view class="form-box">
        <form bindsubmit="formSubmit">
            <input value="{{information.name}}" name="name" placeholder="姓名"/>
            <input type="number" name="phone" value="{{information.phone}}" placeholder="联系方式"/>
            <input type="number" name="stuID" value="{{information.stuID}}" placeholder="学号"/>
            <button form-type="submit">保存</button>
        </form>
    </view>
</view>
