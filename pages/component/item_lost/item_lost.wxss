@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.item {
  margin-top: 10rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #800080;
  border-bottom-width: calc(100% - 120upx);
  justify-content: space-between;
}

.item_large {
  width: 100%;
  margin-top: 10rpx;
  font-size: 30rpx;
  display: flex;
  height: 240rpx;
  border-bottom: 1px solid #800080;
  border-bottom-width: calc(100% - 120upx);
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.detail {
  width: 90%;
  margin-top: 10rpx;
  font-size: 30rpx;
  display: flex;
  height: 240rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-left: 40rpx;
}

.left {
  display: flex;
  padding-left: 20rpx;
  color: rgb(80, 80, 80);
}

.right {
  margin-right: 30rpx;
}

.image_view {
  margin-left: 60rpx;
}

.image {
  background: #800080;
  float: left;
  margin-left: 15rpx;
  margin-top: 15rpx;
}

.user_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}