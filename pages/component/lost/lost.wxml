<import src="../search/search.wxml" />

<view class="search-section">
  <view class="search-pancel">
    <!--<image src="/images/search-pic.png" class="search-icon" />-->
    <icon class="search-icon" type="search"></icon>
    <input bindinput="searchInput" bindfocus="searchFocus" value="{{searchData.value}}" bindblur="searchBlur" class="search-input" placeholder="搜索" />
    <button class="search-button" bindtap="searchFn" style="font-size:26rpx">搜索</button>
  </view>
</view>
<template is="search" data="{{searchData}}" />

<view class="section2" style="background:#ececec">
  <block wx:for="{{lostitems}}">
    <view class="cu-card article">
      <view class="cu-item shadow" bindtap='itemTap' data-index="{{index}}">
        <view class="title">
          <view class="text-cut">{{item.briefInfo}}</view>
        </view>
        <view class="content">
          <image mode='aspectFill' wx:if='{{item.imgs[0]}}' src="{{item.imgs[0]}}"></image>
          <view class="desc">
            <view class="text-content">
              <view class="cu-capsule">
                <view class="cu-tag bg-blue">
                  <text class="icon-likefill"></text>
                </view>
                <view class="cu-tag line-blue">寻物启事</view>
              </view>
              <view class='split'></view>
              <view class="cu-tag bg-green light radius">{{item.address}}</view>
              <view class='split'></view>
              <view class="cu-tag bg-purple light radius">{{item.postTime}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>